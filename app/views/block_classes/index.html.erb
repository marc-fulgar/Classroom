<br />
<div class="well well-sm col-md-6 col-md-offset-3">
	<h1>Blocks</h1>
	<div class="table-responsive">
		<table class="table table-striped">
			<th>Name</th>
			<th>Adviser</th>
			<th>Students</th>
			<th> </th>
			<% @block_classes.each do |block_class| %>
			  <tr>
					<td><%= link_to block_class.name, block_class %></td>
					<td><%= block_class.teacher ? (link_to "#{block_class.teacher.last_name}, #{block_class.teacher.first_name}", block_class.teacher) : "" %>
					<td><%= block_class.students.count %></td>
			    <td><%= link_to "Delete", block_class, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %></td>
			  </tr>
			<% end %>
			<tr>
				<td> </td>
				<td> </td>
				<td> </td>
				<td>
					<% if can? :manage, 'Teachers' %>
						<%= link_to 'Create', new_block_class_path, class: "btn btn-primary btn-xs" %><br />
					<% end %>
				</td>
			</tr>
		</table>
	</div>

	<center><%= page_entries_info @block_classes %><br/>
	<%= will_paginate @block_classes, renderer: BootstrapPagination::Rails %></center>
</div>

