<%= render partial:'/layouts/validations', locals: {model: @block_class} %>

<%= form_for @block_class do |f| %>
	<br/>
	<div class="well well-sm col-md-4 col-md-offset-4">
		<div class="form-group">
			<%= f.text_field :name, class:"form-control", placeholder:"Block name", required: true %><br />
				
			<%= f.select :teacher_id, options_from_collection_for_select((Teacher.includes(:block_class).where(block_classes: { id: nil }) + Teacher.where(id: @block_class.teacher_id)), 'id', 'last_name', @block_class.teacher_id), {include_blank: "- Select Adviser -"} , class: 'form-control select2' %><br />
		  
			<%= f.submit "Submit", class:"btn btn-primary btn-block" %>
			
			<center>
				<% if @block_class.id? %>
					<%= link_to "Cancel", block_class_path(@block_class) %><br />
				<% end %>
				<%= link_to "Back to Blocks", block_classes_path %>
			</center>
		</div>
	</div>
<% end %>