<%= render partial:'/layouts/validations', locals: {model: @lecture} %>

<%= form_for @lecture do |f| %>
	<br/>
	<div class="well well-sm col-md-4 col-md-offset-4"><center>	
		<% if @subject %>
			<%= "Lecture for #{@subject.name}" %><br />
			<%= "By #{@subject.teacher.last_name}, #{@subject.teacher.first_name}"%><br /><br />
		<% end %>
		<div class="form-group">
			<%= f.label :title, class:"sr-only"%>
			<%= f.text_field :title, class:"form-control", autofocus:true, placeholder:"Title", required: true %><br />
			
			<%= f.label :content, class:"sr-only"%>
			<%= f.text_area :content, class:"form-control", rows: 7, placeholder:"Content", style:"resize: none;", required: true%><br />
			
			<%= f.label :remarks, class:"sr-only"%>
			<%= f.text_area :remarks, class:"form-control", rows: 4, placeholder:"Remarks", style:"resize: none;" %><br />
			
			<%= f.label :subject_id, class:"sr-only"%>
			<%= f.select :subject_id, options_from_collection_for_select(Subject.all, 'id', 'name', @subject.try(:id)), {include_blank: "- Select Subject -"} , class: 'form-control select2' %><br />
			
			<%= f.submit "Submit", class:"btn btn-primary btn-block" %>
			
			<center>
				<% if @lecture.id %><%= link_to "Back to Lecture", @lecture %><br /><% end %>
				<%= link_to "Back to Subject", @subject %><br />
			</center>
		</div>
	</div>
<% end %>