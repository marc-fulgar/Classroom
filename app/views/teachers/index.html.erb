<br />
<div class="well well-sm col-md-8 col-md-offset-2">
	<h1>Teachers</h1>
	<div class="table-responsive">
		<table class="table table-striped">
			<th>Name</th>
			<th>ID No.</th>
			<th>Email</th>
			<th>Class</th>
			<% if current_user.admin? %>
				<th> </th>
			<% end %>
			<% @teachers.each do |teacher| %>
			  <tr>
					<td><%= link_to "#{teacher.last_name}, #{teacher.first_name}", teacher %></td>
					<td><%= link_to teacher.username, teacher %>
					<td><%= mail_to teacher.email %></td>
					<td><%= teacher.block_class ? (link_to teacher.block_class.name, teacher.block_class) : "" %>
					<% if current_user.admin? %>
				    <td>
							<%= link_to "Edit", edit_teacher_path(teacher), class:"btn btn-primary btn-xs" %>
							<% unless teacher.admin? %><%= link_to "Delete", teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %><% end %>
						</td>
					<% end %>
			  </tr>
			<% end %>
			<tr>
				<td> </td>
				<td> </td>
				<td> </td>
				<td> </td>
				<td>
					<% if can? :manage, 'Teachers' %>
						<%= link_to 'Create', new_teacher_path, class: "btn btn-primary btn-xs" %><br />
					<% end %>
				</td>
			</tr>
		</table>
	</div>

	<center><%= page_entries_info @teachers %><br/>
	<%= will_paginate @teachers, renderer: BootstrapPagination::Rails %></center>
</div>

