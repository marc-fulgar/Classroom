<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% if current_user.is_admin? %>
YOU ARE AN ADMIN
<% end %>

<table>
    <tr>
      <th>Last Name</th>
      <th>First Name</th>
      <th>User Type</th>
      <th>Admin?</th>
    </tr>
  <% @users.each do |user| %>
    <tr>
			<td><%= user.last_name %><td>
			<td><%= user.first_name %><td>
			<td><%= user.type %><td>
			<td><%= user.is_admin %><td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br>

