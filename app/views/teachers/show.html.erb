<table style="margin:1%; height:160px">
	<td>
		<%= image_tag @teacher.avatar.url(:icon), class: "img-rounded" %>
	</td>
	<td style="padding: 10px">
		<h3>
			<strong><%= @teacher.first_name %> <%= @teacher.last_name %></strong>
			<small>#<%= @teacher.username %></small>
		</h3>
		<% if @teacher.block_class%>
			<%= link_to "Block #{@teacher.block_class.name}", @teacher.block_class %><br />
		<% end %>
		<%= mail_to @teacher.email %><br />
		<% if @teacher.id == current_user.id || current_user.admin? %>
			<%= link_to 'Edit', edit_teacher_path, class: "btn btn-primary btn-xs" %>
		<% end %>
		<%= link_to 'Back to Teachers', teachers_path, class: "btn btn-primary btn-xs" %>
	</td>
</table>

<% if @teacher.subjects.present? %>
	<div class="well well-sm col-md-5 table-responsive" style="height: 350px; margin:1%; min-width:48%">
		<strong>Subjects</strong><br />
			<div style="height: 310px; overflow-y:scroll">
				<table class="table">
					<% @teacher.subjects.each do |subject| %>
						<tr>
							<td><%= link_to subject.name, subject_path(subject) %></td>
							<td>
								<a href='<%= subject_lectures_path(subject) %>' class="btn btn-primary btn-xs" style="disabled: true">
									Lectures
								</a>
								<a href='<%= subject_assignments_path(subject) %>' class="btn btn-primary btn-xs">
									Assignments
								</a>
								<a href='<%= subject_exam_schedules_path(subject) %>' class="btn btn-primary btn-xs">
									Exams Schedules
								</a>
							</td>
						</tr>
					<% end %>
				</table>
			</div>
	</div>
<% end %>

<% if @teacher.block_class.present? %>
	<div class="well well-sm col-md-5 table-responsive" style="height: 350px; margin:1%; min-width:48%">
		<strong><%= link_to "Block #{@teacher.block_class.name}", block_class_path(@teacher.block_class) %></strong><br />
			<div style="height: 310px; overflow-y:scroll">
				<table class="table table-striped">
					<th>Name</th>
					<th>ID No.</th>
				<th><%= current_user == @teacher ? "Average" : "" %></th>
					<% @teacher.block_class.students.each do |student|%>
					<tr>
						<td><%= link_to "#{student.last_name}, #{student.first_name}", student_path(student) %></td>
						<td><%= student.username %></td>
						<% if current_user == @teacher %><td><%= student.average_score.round(2) %><% end %></td>
					</tr>
					<% end %>
				</table>
			</div>
	</div>
<% end %>