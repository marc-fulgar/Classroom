<%= form_for @exam_schedule do |f| %>
	<br/>
	<div class="well well-sm col-md-4 col-md-offset-4"><center>	
		<%= "Exam Schedule for #{@subject.name}" %><br />
		<%= "By #{@subject.teacher.last_name}, #{@subject.teacher.first_name}"%><br /><br />
		<div class="form-group">
			<%= f.label :title, class:"sr-only"%>
			<%= f.text_field :title, class:"form-control", autofocus:true, placeholder:"Title" %><br />
			
			<%= f.label :content, class:"sr-only"%>
			<%= f.text_area :content, class:"form-control", placeholder:"Content", style:"resize: none;"%><br />
			
			<%= f.label :remarks, class:"sr-only"%>
			<%= f.text_area :remarks, class:"form-control", placeholder:"Remarks", style:"resize: none;" %><br />
			
			<%= f.label :max_score, class:"sr-only"%>
			<%= f.text_field :max_score, class:"form-control", placeholder:"Max Score" %><br />
			
			<%= f.hidden_field :subject_id, value: @subject.id %>
			
      <%= f.text_field :date, class:"form-control datepicker" %><br />
			
			<%= f.submit "Submit", class:"btn btn-primary btn-block" %>
			
			<center>
				<% if @exam_schedule.id %><%= link_to "Back to Exam", @exam_schedule %><br /><% end %>
				<%= link_to "Back to Subject", @subject %><br />
			</center>
		</div>
	</div>
<% end %>